<LabelX>:
    # font_size:self.height

<LabelY>
    # font_size:self.height
    # size_hint:1,None
<GridX>:
    # font_size:self.height
    canvas:
        Color:
            rgba:root.color
        Line:
            points:self.x,self.y,self.x,self.y+self.height
<GridY>:
    canvas:
        Color:
            rgba:root.color
        Line:
            points:self.x,self.y,self.x+self.width,self.y
        

    # font_size:self.height


<Graph>:
    plot_area:plot_area
    plot_area_line:plot_area_line
    root_x_label:root_x_label
    root_y_label:root_y_label
    root_grid_x:root_grid_x
    root_grid_y:root_grid_y
    


    BoxLayout:
        # size_hint:.98,.98
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, 1
            width: min(root.size)*.15
            BoxLayout:
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                orientation:"vertical"
                id:root_y_label
                canvas.before:
                    PushMatrix:
                    Translate:
                        y:self.height/root.major_y/2
                canvas.after:
                    PopMatrix:
                
            FloatLayout:
                size_hint:1,None
                height:min(root.size)*.07
                Label
                    pos_hint:{'center_x':.5,"center_y":1}
                    text: root.min_y_label
                    font_size:self.height*.5
                    color:root.min_y_label_color
                Label:
                    pos_hint:{'center_x':1,"center_y":.5}
                    text: root.min_x_label
                    font_size:self.height*.5
                

        BoxLayout:
            orientation:'vertical'
            FloatLayout:
                
                canvas.after:
                    Color:
                        rgba:1,1,1,1
                    Line:
                        rectangle:(self.x,self.y,self.width,self.height)
                        width:dp(1.1)
                Widget:
                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                    id:plot_area
                BoxLayout:
                    orientation:"vertical"
                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                    id:root_grid_y
                BoxLayout:
                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                    id:root_grid_x
                
                Widget:
                    id:plot_area_line
                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                    canvas.before:
                        PushMatrix
                        Translate:
                            x:root.translate_x
                       
                        Color:
                            rgba:   root.ch1_color
                        Line:                           
                            points: root.ch1_points
                            width:dp(1.1)
                        Color:
                            rgba:   root.ch2_color
                        Line:                        
                            points: root.ch2_points
                            width:dp(1.1)
                        Color:
                            rgba:   root.ch3_color
                        Line:                        
                            points: root.ch3_points
                            width:dp(1.1)

                        Color:
                            rgba:   root.ch4_color
                        Line:                         
                            points: root.ch4_points
                            width:dp(1.1)
                        Color:
                            rgba:   root.ch5_color
                        Line:                         
                            points: root.ch5_points
                            width:dp(1.1)
                        Color:
                            rgba:   root.ch6_color
                        Line:                        
                            points: root.ch6_points
                            width:dp(1.1)

                        Color:
                            rgba:   root.ch7_color
                        Line:                         
                            points: root.ch7_points
                            width:dp(1.1)

                        Color:
                            rgba:   root.ch8_color
                        Line:                       
                            points: root.ch8_points
                            width:dp(1.1)
                    canvas.after:
                        PopMatrix

            BoxLayout
                id:root_x_label
                size_hint:1,None
                height:min(root.size)*.07
                canvas.before:
                    PushMatrix:
                    Translate:
                        x:self.width/root.major_x/2
                canvas.after:
                    PopMatrix:

 